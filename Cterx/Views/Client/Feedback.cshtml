@using OnlineStrore.Dto
@model CreateFeedbackDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .modal {
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

        .modal h2 {
            margin: 0 0 20px;
            font-size: 24px;
            color: #333333;
        }

    label {
        font-size: 16px;
        color: #555555;
        display: block;
        margin-bottom: 8px;
    }

    textarea {
        width: 100%;
        border: 1px solid #cccccc;
        border-radius: 4px;
        padding: 10px;
        font-size: 14px;
        resize: none;
        margin-bottom: 20px;
    }

        textarea:focus {
            outline: none;
            border-color: #007BFF;
        }

    button {
        background-color: #007BFF;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        display: inline-block;
    }

        button:hover {
            background-color: #0056b3;
        }

    .validation-summary-errors {
        background-color: #ffe5e5;
        border: 1px solid #ffcccc;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 4px;
        color: #d8000c;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Оставить отзыв</title>
    <link href="@Url.Content("~/css/styles.css")" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="feedbackModal" class="modal">
        <div class="modal-content">
            <h2>Оставить отзыв</h2>
            @Html.ValidationSummary(true)
            <form asp-action="ClientFeedback" asp-controller="Client" method="post">

                <label>Ваш отзыв:</label><br>
                <textarea asp-for="Description" rows="6" style="width:100%" required></textarea>
                @Html.ValidationMessageFor(x => x.Description)

                <button type="submit">Оставить отзыв</button>
            </form>
        </div>
    </div>
</body>
</html>