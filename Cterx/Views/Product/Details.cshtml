@using OnlineStrore.Logic.Queries.Product.GetProduct

@model ProductVm
@{
    Layout = "~/Views/Layout.cshtml";
}

<style>
    .content {
        padding: 20px;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    .product-details {
        display: flex;
        align-items: flex-start; 
        gap: 40px; 
        margin: 40px 0;
    }

        .product-details img {
            width: 600px;
            height: 450px;
            object-fit: cover; 
            border-radius: 10px; 
            border: 1px solid #ddd;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); 
            transition: transform 0.3s ease, box-shadow 0.3s ease; 
        }

            .product-details img:hover {
                transform: scale(1.05); 
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

    .product-info {
        max-width: 400px;
        font-size: 16px;
        line-height: 1.6;
    }

        .product-info p {
            margin: 10px 0;
        }

            .product-info p b {
                font-size: 18px;
                color: #e67e22;
            }

    button {
        margin-top: 20px;
        padding: 12px 25px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        button:hover {
            
            transform: scale(1.05); 
        }

        button:active {
            transform: scale(0.95); 
        }
</style>

<div class="content">
    <h1>@Model.Name</h1>
    <div class="product-details">
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name">

        <div class="product-info">
            <p><b>Цена: @Model.Cost.ToString() р</b></p>
            <p><b>Характеристики:</b><br>@Model.Characteristics</p>
            <p><b>Количество в наличии:</b> @Model.CountOfProduct</p>
            <button onclick="addToCart('@Model.Id')">Добавить в корзину</button>
        </div>
    </div>
</div>
