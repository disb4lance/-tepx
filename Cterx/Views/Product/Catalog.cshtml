@using OnlineStrore.Logic.Queries.Product.GetProductList

@model ProductListVm
@{
    Layout = "~/Views/Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        color: #333;
    }

    .content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .catalog-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .catalog-item img {
            width: 120px;
            height: auto;
            margin-right: 15px;
        }

        .catalog-item .text {
            text-align: left;
            color: #333333;
        }

    a {
        text-decoration: none;
        color: inherit;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="content">
    <div class="catalog-header">
        <h1>Наши товары</h1>
        <p>Выберите товар, который вас интересует, и перейдите на страницу с подробным описанием.</p>
    </div>

    <div class="catalog-flex">
        @foreach (var product in Model.Products)
        {
            <div>
                <a href="@Url.Action("Details", "Product", new {id = product.Id})">
                    <img src="@Url.Content(product.ImageUrl)" alt="@product.Name">
                </a>
                <p>
                    <b>@product.Cost.ToString() р</b><br>
                    <i>@product.Name</i>
                </p>
            </div>
        }
    </div>
</div>
